<% if flash[:notice] %>
  <div class="flash"><%= flash[:notice]%></div>
<% end %>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td class="link"><%= link_to "Show", book_path(book.id) %></td>
        <td class="link"><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td class="link"><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>


<% if @book.errors.any? %>
  <div class="error-message">
    <div class="count-count">
      <%= @book.errors.count %>ã€€errors prohibited this book from being saved:
    </div>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li>
      <%= message %>
    </li>
    <% end %>
  </ul>
  </div>
<% end %>

<%= form_with model: @book do |f| %>
<div class="form">
  <div class="field">
    <label>Title</label>
      <%= f.text_field :title, class: "title"%>
  </div>
  <div class="field">
    <label>Body</label>
    <%= f.text_area :body, class: "body" %>
  </div>
  <%= f.submit "Create Book", class: "btn" %>
</div>
<% end %>