  <h1>Editing Book</h1>
<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
<div class="form">
  <div class="field">
    <label>Title</label>
      <%= f.text_field :title, class: "title" %>
  </div>
  <div class="field">
    <label>Body</label>
    <%= f.text_area :body, class: "body" %>
  </div>
  <%= f.submit "Update Book", class: "btn" %>
</div>
<% end %>

<%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>